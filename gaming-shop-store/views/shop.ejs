<%- include('partials/header') %>

<h1>Shop</h1>
<div class="books">
  <% books.forEach(function(book) { %>
  <div class="book">
    <h2><%= book.title %></h2>
    <p><%= book.description %></p>
    <p>Price: $<%= book.price %></p>
    <% if (book.image) { %>
    <img src="<%= book.image %>" alt="<%= book.title %>" />
    <% } %>
    <a href="/books/buy/<%= book._id %>">Buy Now</a>
  </div>
  <% }); %>
</div>

<%- include('partials/footer') %>
